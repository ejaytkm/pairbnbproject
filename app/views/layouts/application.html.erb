<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag 'application', media: 'all'%>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>
</head>
<body>

  <nav class="navbar navbar" >
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/home">PairBnB</a>
    </div>
    
    <ul class="nav navbar-nav">
      <div id="flash2">
        <% flash.each do |key, value| %>
         <div class="flash <%= key %>"><%= value %></div>
        <% end %>
      </div>
      
       <li><%= button_to "Listings", listings_path, method: :get %></li>
      
      <% if current_user.nil? %>
        <% "Do nothing" %>
      <% elsif current_user.roles != "tenant" %>
        <li><%= button_to "Create a Listing", new_listing_path, method: :get %></li>
      <% end %>

    
       
    
      <% if current_user.nil? %>
        <% "Do nothing" %>
      <% elsif current_user.roles == "tenant" %>
        <li><%= button_to "Become a Host", new_listing_path, method: :get %></li>
      <% end %>

      </ul>

      <ul class="nav navbar-nav navbar-right"
        
        <% if signed_in? %>
          <li><%= current_user.email %></li>
        <% end %>

        <div id="header2">
          <% if signed_in? -%>
                <li>  <%= button_to t(".sign_out"), sign_out_path, method: :delete %> </li>
              <% else -%> 
                <li>  <%= link_to t(".sign_in"), sign_in_path %> </li>
            <% end -%>
        </div>
      
      </ul>
    

    </div>
  </nav>


  <%= yield %>
</body>
</html>
