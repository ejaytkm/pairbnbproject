<h1> Confirming your reservation </h1>


<ul><b>Send the email to:  </b> <%= current_user.email %></ul>
<ul><b>AirBNB Username:   </b> <%= current_user.profile.first_name + current_user.profile.last_name %></ul>

<h3> Select your dates </h3>
<%= form_for [@listing, @reservation] do |f|%>
  <p>
	  <%= f.label :Check_in %>
	  <%= f.date_field :check_in %>
  </p>

  <p>
	  <%= f.label :Check_out%>
	  <%= f.date_field :check_out %>
	</p>

	<p>
	<%= f.submit 'Pay now' %>
	</p>
 
<% end %>